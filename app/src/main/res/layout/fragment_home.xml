<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
<FrameLayout
        android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout2">
            <LinearLayout
                    android:background="@color/mainColor"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/linearLayout2">

            <ImageView
                    android:id="@+id/homeTap"
                    android:layout_weight="1"
                    android:src="@drawable/bottom_hometap"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:id="@+id/tipTap"
                    android:layout_weight="1"
                    android:src="@drawable/bottom_goodtip"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:id="@+id/talkTap"
                    android:layout_weight="1"
                    android:src="@drawable/bottom_talk"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:id="@+id/bookmarkTap"
                    android:layout_weight="1"
                    android:src="@drawable/bottom_bookmark"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:id="@+id/storeTap"
                    android:layout_weight="1"
                    android:src="@drawable/bottom_store"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
</layout>